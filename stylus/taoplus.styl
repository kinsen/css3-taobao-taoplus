@import "base"

/** Tao + **/

/* button */
.btn
  position: fixed
  left: 16px
  bottom: 13px
  z-index: 3
  width: 46px
  height: 46px
  line-height: 38px
  text-align: center
  cursor: default
  border: 3px solid #f9f9f9
  border-radius: 50%
  background-color: #ff4400
  background: -webkit-gradient(linear, left top, left bottom, from(#ff5400), to(#ff4400))
  box-shadow: 0 0 3px rgba(0, 0, 0, .3)

.btn.on
  background: rgba(204, 204, 204, .7)

.btn span
  display: inline-block
  font-size: 25px
  color: #fff


/* taoplus */
.taoplus
  position: fixed
  left: 32px
  bottom: 40px
  z-index: 2
  opacity: 0
  width: 195px
  height: 195px
  overflow: hidden
  border: 5px solid rgba(51, 51, 51, .1)
  border-radius: 50%
  pointer-events: none
  -webkit-transform-origin: -10px 210px
  -webkit-transform: scale(.1)
  -webkit-transition: all .3s

.taoplus.on
  visibility: visible
  opacity: 1
  pointer-events: auto
  -webkit-transform: scale(1)


